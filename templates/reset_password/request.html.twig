{% block body %}
<div class="container mail-request">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
        <div class="card w-100">
            <div class="card-header">
               <h1 class="card-title text-center pt-3">Reset your password</h1>
            </div>
            <div class="card-body p-5 d-flex flex-column">
               {{ form_row(requestForm.email) }}
               <small>
                Enter your email address and we will send you a
                link to reset your password.
               </small>
            <button class="btn btn-primary w-75 mt-2 text-center text-white">Send password reset email</button>

            <div class="back-to-shop mt-3"><a href="{{ path("app_home") }}" class="text-muted">Retour</a></div>
            </div>
         </div>

    {{ form_end(requestForm) }}
</div>
{% endblock %}
